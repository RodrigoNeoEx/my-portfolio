{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler", // OU node16
    "skipLibCheck": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
